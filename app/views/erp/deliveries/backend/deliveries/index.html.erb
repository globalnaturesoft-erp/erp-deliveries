<% content_for :title do %>
    <%= t('.deliveries') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-opencart"></i> <%= t('.deliveries') %>
<% end %>

<%= erp_datalist(
    url: erp_deliveries.list_backend_deliveries_path,
    keywords: [
        {
            text: t('.code'), name: 'erp_deliveries_deliveries.code'
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-file-text"></i> '+t('.change_delivered'),
            url: erp_deliveries.status_delivered_all_backend_deliveries_path,
            data_method: 'PUT'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.change_deleted'),
            url: erp_deliveries.status_deleted_all_backend_deliveries_path,
            data_method: 'PUT',
            data_confirm: t('.change_deleted_confirm')
        }        
    ],
    filters: [
        {
            text: t('.is_delivered'), name: 'erp_deliveries_deliveries.status', value: Erp::Deliveries::Delivery::DELIVERY_STATUS_DELIVERED, checked: true
        },
        {
            text: t('.is_deleted'), name: 'erp_deliveries_deliveries.status', value: Erp::Deliveries::Delivery::DELIVERY_STATUS_DELETED, checked: false
        }
    ],
    columns: [
        {
            text: t('.code'), name: 'code', value: true, checked: true
        },
        {
            text: t('.order_code'), name: 'order_code', value: true, checked: true
        },
        {
            text: t('.customer'), name: 'customer', value: true, checked: true
        },
        {
            text: t('.employee'), name: 'employee', value: true, checked: true
        },
        {
            text: t('.order_date'), name: 'order_date', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: '', sort_direction: 'desc' }
) %>